<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatToDo.Views.Pages.PomodoroTimerPage"
             Title="PomodoroTimer">
    
    
    
    <VerticalStackLayout Padding="5" HorizontalOptions="Center">
        <Grid
            ColumnDefinitions="*,*,*"
            RowDefinitions="*,*,*">
            <Label Grid.Column="1" Text="Timer" Margin="10" FontSize="32" FontAttributes="Bold" FontFamily="Bauhaus93" TextColor="{StaticResource CompletedGreen}"/>
            <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="5" HorizontalOptions="Center" >
                <TimePicker FontAttributes="Bold" TextColor="{StaticResource CyanBorder}" FontSize="48"/>
            </VerticalStackLayout>
            
        </Grid>
        
    </VerticalStackLayout>
    
    
    
</ContentPage>