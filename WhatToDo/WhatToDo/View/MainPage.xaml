<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:WhatToDo.Model"
             x:Class="WhatToDo.View.MainPage">
    <Grid>
        <CollectionView x:Name="dataDisplay">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:WeatherData">
                    <Border StrokeThickness="5" Margin="5">
                        <Grid RowDefinitions="*,*,*,2*" Margin="5" Padding="5">
                            <Label Grid.Row="0" Text="{Binding Path=name}" Padding="5"/>
                            <Label Grid.Row="1" Text="{Binding Path=temperature}" Padding="5"/>
                            <Label Grid.Row="2" Text="{Binding Path=windSpeed}" Padding="5"/>
                            <Label Grid.Row="3" Text="{Binding Path=detailedForecast}" Padding="5"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>


</ContentPage>
