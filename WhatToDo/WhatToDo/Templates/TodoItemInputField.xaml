<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatToDo.Template.TodoItemInputField">

    <ContentView.Resources>
        <ControlTemplate x:Key="ItemInputFields">
            <VerticalStackLayout>
                <Label Text="{Binding LabelText}" TextColor="{StaticResource LightBackground}" FontAttributes="Bold" Padding="5"/>
                <Border                
            Stroke="{StaticResource LightBorderColor}"
            StrokeThickness="2"
            Padding="10,0,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry Text="{Binding ItemField}" BackgroundColor="{StaticResource LightBackground}"/>
                </Border>
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.Resources>
    
</ContentView>
